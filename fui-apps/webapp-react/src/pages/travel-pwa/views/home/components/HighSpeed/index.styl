.high-speed {
    position: relative;
    height: 92px;
    line-height: 92px;
    display: flex;
}

.high-speed-label {
    text-align: left;
    color: #888;
    font-size: 30px;
    flex: 1;
}

.high-speed-switch {
    position: relative;
    text-align: right;
    flex: 1;
}

.high-speed-track {
    display: inline-block;
    position: relative;
    width: 100px;
    height: 60px;
    padding: 1px;
    border-radius: 32px;
    background-color: #ccc;
    vertical-align: middle;
    box-sizing: border-box;
}

.high-speed-track.checked {
    background-color: #1ba9ba;
}

.high-speed-handle {
    position: absolute;
    z-index: 1000;
    top: 2px;
    left: 2px;
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    transition: transform 0.1s ease-out;
    box-sizing: border-box;
}

.high-speed-handle.checked {
    transform: translateX(20px);
}

.high-speed-track::after {
    position: absolute;
    left: 15px;
    content: ' ';
    width: 68px;
    height: 56px;
    background-color: #fafafa;
    border-radius: 0 30px 30px 0;
    transition: transform 0.13s ease-out;
}

.high-speed-track.checked::after {
    transform: scale(0);
}
