.todo-list-wrap{
  .list-head-wrap{
    display: flex;
    flex-direction: row;
    text-align: center;
    font-size:16px;
    background-color: #eee;
    color: #333;
    font-weight: 500;
    padding: 10px
    .list-head-title{
      flex: 1 1 auto;

    }
    .list-head-content{
      flex: 1 2 100px;
    }
    .list-head-time{
      flex: 1 2 100px;
      }
    .list-head-status{
      flex: 1 1 auto;
      }
  }
  .list-item{
    padding: 10px;
    margin: 10px 0;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction: row;
    text-align: center;
    font-size:16px;
    .todo-td{
      display: flex;
      align-items: center;
      justify-content: center;
    }
    i{
      color: rgba(224, 62, 62, 0.6);
      flex: 1 1 auto;
      font-size: 24px;
      font-weight: 700;
      &:hover{
        // font-size: 18px;
        cursor: pointer;
      }
    }
    .todo-title{
      flex: 1 1 auto;
    }
    .todo-content{
      flex: 1 2 100px;
    }
    .todo-finish-time{
      flex: 1 2 100px;
    }
  }
}

