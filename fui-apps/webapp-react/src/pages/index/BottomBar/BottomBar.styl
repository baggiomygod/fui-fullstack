@import '../../../statics/style/stylus/mixins/resources.styl'
.bottom-bar-wrap{
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    height: 50px;
    box-shadow: 0px -1px 10px 0px #eee;
    background-color: #fff;
    .bar-item {
        flex: 1 1 auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        color: #5a5353;
        text-decoration: none;
        font-weight: 100;
        &.active{
            background-color: #eee;
        }
        .tab-icon{
              // height: 100%;
              // line-height: 60px;
            .icon{
                font-size: 32px;
            }
        }
        .btn-name{
            font-size: 12px;
            margin-top: 3px;
        }
    }
}
