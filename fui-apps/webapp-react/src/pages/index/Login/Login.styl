$primary = #4393f4;

.login-container{
  background-color: rgba(203, 210, 214, 0.5);
  box-sizing: border-box;
  height: 100vh;
  padding: 20vh 30px 0 30px;
  .login-box{
    display: flex;
    flex-direction: column;
    .default-avatar{
      text-align: center;
    }
    .auth-form{
      margin-top: 20px;
      .form-item{
        margin: 15px 0;
        .f-input{
          border: 1px solid #eee;
          width: 100%;
          padding: 10px;
          border-radius: 4px;
          box-sizing: border-box;
          &:focus{
            outline: none;
            border-color: #9ecaed;
            box-shadow: 0 0 10px #9ecaed;
          }
        }
      }
      .login-btn{

      }
    }
  }
}
  .f-button{
    border-radius: 4px;
    width: 100%;
    padding: 5px;
    font-size: 14px;
      &.primary{
        background-color: $primary;
        border: 1px solid $primary;
        color: #fff;
      }
  }
