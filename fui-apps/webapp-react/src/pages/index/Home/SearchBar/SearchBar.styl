@import '../../../../statics/style/stylus/mixins/resources.styl'

.search-bar-wrap{
  position: fixed;
  width: 100%;
  top: 0;
  display: flex;
  justify-content: space-between;
  color: #fff;
  height: 40px;
  background-color: #333;
  // background-color: $blue;
  // border-bottom: 1px solid #fff;
  // padding: 5px 0;
  .logo, .setting{
    font-size: 30px;
    // width: 34px;
    height: 40px;
    flex: 0 1 40px;
    line-height: 34px;
  }
  .search {
    flex: 1 1 auto;
    padding: 5px 0;
    overflow: hidden;
    .search-btn{
      color: #e2e2e2;
      padding: 0 20px;
        font-size: 14px;
        height: 30px;
        margin: 0 12px;
        text-align: left;
        line-height: 30px;
        background-color: #fff;
        border-radius: 30px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
  }
  .setting{
    line-height: 40px;
    .iconfont{
      font-size: 30px;
    }
  }
}
