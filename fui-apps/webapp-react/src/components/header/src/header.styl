.common-header{
    height: 45px;
    background-color: rgb(67,147, 244);
    padding: 2px 10px;
    box-shadow: 0 2px 4px -1px rgba(0,0,0,.2), 0 4px 5px rgba(0,0,0,.14), 0 1px 10px rgba(0,0,0,.12);
    color: #fff;
    font-size: 20px;
    display: flex;
    align-items: center;
    .icon{
      flex: 0 0 auto;
      font-size: 30px;
    }
    h3{
      flex: 1 2 auto;
      text-align: center;
      line-height: 45px;
    }
}
