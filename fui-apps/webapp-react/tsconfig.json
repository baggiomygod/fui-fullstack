{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "jsx": "react",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "lib": ["es6","dom", "es2015.promise"]
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "src/pages/index/views/WebVR/*"
      ],
      "include": [
          "./src"
      ],
      "typeRoots": [
        "../node_modules/@types",
        "../@types"
    ]
}
